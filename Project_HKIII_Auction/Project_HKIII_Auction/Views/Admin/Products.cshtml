@model IEnumerable<Project_HKIII_Auction.Models.Product>
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

@using (Html.BeginForm("SreachPro", "Admin", FormMethod.Post, new { @class = "form-inline" }))
{
    <label class="sr-only" for="inlineFormInputName2">User Name</label>
    @Html.TextBox("txtSreach", null, new { @class = "form-control mb-2 mr-sm-2", @placeholder = "UserName" })
    <button type="submit" class="btn btn-gradient-primary mb-2">Search</button>
}
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Recent Product</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Product ID </th>
                                <th> Product Name </th>
                                <th> Date Start </th>
                                <th> Date End </th>
                                <th> Minimun Price </th>
                                <th> Maximun Price </th>
                                <th> Description </th>
                                <th> Status </th>
                                <th> Incremenent </th>
                                <th> Image </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model)
                            {
                                <tr>
                                    <td>@i.PId</td>
                                    <td>@i.PName</td>
                                    <td>@i.DateStart</td>
                                    <td>@i.DateEnd</td>
                                    <td>@i.MinimumPrice</td>
                                    <td>@i.MaximumPrice</td>
                                    <td>@i.Description</td>
                                    <td>@i.Status</td>
                                    <td>@i.Incremenent</td>
                                    <td>@i.Image</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

